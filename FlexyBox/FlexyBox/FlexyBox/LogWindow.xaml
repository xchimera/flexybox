<Window x:Class="FlexyBox.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize"
        WindowStyle="None"
        Height="300" Width="300">

    <Window.Resources>
        <DataTemplate x:Key="log">
            <Expander Header="{Binding TimeChanged, StringFormat=dd-MM-yy HH:mm}" Width="280">
                <StackPanel>
                    <TextBlock Text="{Binding Answer}" />
                </StackPanel>
            </Expander>
        </DataTemplate>
    </Window.Resources>
    
    <ListView ItemsSource="{Binding LogGroups}" ItemTemplate="{StaticResource ResourceKey=log}">
    </ListView>
</Window>

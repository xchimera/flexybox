<Window x:Class="FlexyBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Padding" Value="15"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Ribbon x:Name="RibbonWin"  SelectedIndex="0">
            <!-- Ribbon Tab #1: Home -->
            <RibbonTab Header="Home" KeyTip="H" >
                <!-- Home  group-->
                <RibbonGroup x:Name="ClipboardGroup" >
                    <RibbonButton  Label="Søg" KeyTip="S" />
                    <RibbonButton Label="Tilføj" KeyTip="T" >
                        <TabControl Height="100" Width="100">
                            <TabItem Header="TabItem">
                                <Grid Background="#FFE5E5E5"/>
                            </TabItem>
                            <TabItem Header="TabItem">
                                <Grid Background="#FFE5E5E5"/>
                            </TabItem>
                        </TabControl>
                    </RibbonButton>
                </RibbonGroup>
            </RibbonTab>
        </Ribbon>
        <TabControl Grid.Row="1" ItemsSource="{Binding Groups}" TabStripPlacement="Left">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Border BorderBrush="DarkSlateBlue" BorderThickness="1">
                            <DockPanel Margin="10">
                                <DockPanel DockPanel.Dock="Left" HorizontalAlignment="Left">
                                    <Image Name="Completed" Source="/Icons/Accept-32x32.png" MouseUp="Completed_MouseUp"/>
                                    <Image Name="NotCompleted" Source="/Icons/Abort-32x32.png" MouseUp="NotCompleted_MouseUp" Margin="5,0,0,0"/>
                                    <Image Name="NotConsidered" Source="/Icons/QuestionMark-32x32.png" MouseUp="NotConsidered_MouseUp" Margin="5,0,0,0"/>
                                </DockPanel>
                                <StackPanel>
                                    <TextBlock Text="{Binding Header}" TextWrapping="Wrap"/>
                                    <TextBox Text="{Binding Comment}" TextWrapping="Wrap" AcceptsReturn="True" MaxHeight="30"/>
                                </StackPanel>
                            </DockPanel>
                        </Border>
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
        </TabControl>
    </Grid>
</Window>